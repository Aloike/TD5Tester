<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:gauge="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mooo.hairyone.td5tester.MainActivity"
    android:padding="1sp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:padding="1sp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <de.nitri.gauge.Gauge
                android:id="@+id/gaugeRpm"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                gauge:upperText="RPM"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <de.nitri.gauge.Gauge
                android:id="@+id/gaugeMph"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                gauge:upperText="MPH" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
                <de.nitri.gauge.Gauge
                    android:id="@+id/gaugeTemp"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    gauge:upperText="TEMP" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:padding="1sp"
        android:orientation="horizontal"
        android:layout_weight="0.5">
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <de.nitri.gauge.Gauge
                android:id="@+id/gaugeA"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                gauge:upperText="A"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <de.nitri.gauge.Gauge
                android:id="@+id/gaugeB"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                gauge:upperText="B"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <de.nitri.gauge.Gauge
                android:id="@+id/gaugeC"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                gauge:upperText="C"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <de.nitri.gauge.Gauge
                android:id="@+id/gaugeD"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                gauge:upperText="D"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
